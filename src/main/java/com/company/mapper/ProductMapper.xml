<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.company.mapper.ProductMapper">
	
	<select id="selectProduct" resultType="ProductVO">
		SELECT id ,type ,name ,explanation ,price, inventory FROM product
	</select>
	
	<select id="viewProduct" parameterType="String" resultType="ProductVO">
		SELECT id ,type ,name ,explanation ,price, inventory FROM product WHERE id = #{id}
	</select>
	
</mapper>